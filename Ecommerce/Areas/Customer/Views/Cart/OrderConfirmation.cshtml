@model int

<div class="container py-5 mb-5">
    <div class="card shadow-lg rounded-4 p-4 w-50 mx-auto">
        <div class="text-center">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            <h2 class="mt-3 fw-bold">Thank You for Your Order!</h2>
            <p class="text-muted">Your order has been placed successfully.</p>
        </div>

        <div class="mt-4 border-top pt-4">
            <h4 class="mb-3">Order Summary</h4>
            <div class="row mb-2">
                <div class="col-sm-4 fw-semibold">Order Number:</div>
                <div class="col-sm-8">#123456</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-semibold">Customer Name:</div>
                <div class="col-sm-8">John Doe</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-semibold">Email:</div>
                <div class="col-sm-8">johndoe@example.com</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-semibold">Shipping Address:</div>
                <div class="col-sm-8">123 Street, Dhaka, Bangladesh</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-semibold">Order Date:</div>
                <div class="col-sm-8">21 May 2025</div>
            </div>
        </div>

        <div class="mt-5">
            <h5 class="mb-3">Products</h5>
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Unit Price</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Product A</td>
                        <td class="text-center">2</td>
                        <td class="text-end">$100</td>
                        <td class="text-end">$200</td>
                    </tr>
                    <tr>
                        <td>Product B</td>
                        <td class="text-center">1</td>
                        <td class="text-end">$150</td>
                        <td class="text-end">$150</td>
                    </tr>
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td class="text-end fw-bold">$350</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary btn-lg rounded-pill px-5">
                Continue Shopping
            </a>
        </div>
    </div>
</div>
