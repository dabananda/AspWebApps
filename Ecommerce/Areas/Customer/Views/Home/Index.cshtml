@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-1">
                <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "https://via.placeholder.com/300x200?text=No+Image")"
                     class="card-img-top object-fit-cover" alt="@product.Title" style="height: 200px; object-fit: cover;" />
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title text-truncate">@product.Title</h5>
                    <p class="text-muted mb-1 small">by <strong>@product.Author</strong></p>
                    <p class="mb-2">
                        <span class="text-decoration-line-through d-block">List Price: $@product.ListPrice</span>
                        <span>as low as: $@product.Price</span>
                    </p>
                </div>
                <div class="p-3">
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary form-control p-2">Details</a>
                </div>
            </div>
        </div>
    }
</div>
