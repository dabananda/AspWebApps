@model int

<div class="container py-5 mb-5">
    <div class="card shadow-lg rounded-4 p-4 w-50 mx-auto">
        <div class="text-center">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            <h2 class="mt-3 fw-bold">Thank You for Your Order!</h2>
            <p class="text-muted">Payment successfull.</p>
        </div>

        <div class="text-center mt-4">
            <a asp-route-orderId="@Model" asp-controller="Order" asp-area="Admin" asp-action="Details" class="btn btn-primary btn-lg rounded-pill px-5">
                Back to Order Details
            </a>
        </div>
    </div>
</div>
