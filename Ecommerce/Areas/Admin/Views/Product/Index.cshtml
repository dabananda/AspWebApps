@model List<Product>

<div>
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2>Product List</h2>
        <a asp-controller="Product" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-plus-circle"></i> Create New Product</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Title</td>
                    <td>@product.ISBN</td>
                    <td>@product.Author</td>
                    <td></td>
                    <td>@product.ListPrice</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>